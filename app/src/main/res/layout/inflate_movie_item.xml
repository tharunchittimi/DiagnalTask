<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imgMoviePoster"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintDimensionRatio="H, 60.6:90.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/poster1" />

        <com.example.diagnaltask.widgets.CustomTextView
            android:id="@+id/movieTitle"
            style="@style/heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:paddingStart="@dimen/dp5"
            android:paddingEnd="@dimen/dp5"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/imgMoviePoster"
            app:layout_constraintStart_toStartOf="@id/imgMoviePoster"
            app:layout_constraintTop_toBottomOf="@id/imgMoviePoster"
            tools:text="The Birds" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>